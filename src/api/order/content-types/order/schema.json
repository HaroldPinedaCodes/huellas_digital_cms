{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Orders"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "orderNumber": {
      "type": "string"
    },
    "items": {
      "type": "json"
    },
    "condition": {
      "type": "enumeration",
      "enum": [
        "pending",
        "paid",
        "shipped",
        "delivered",
        "cancelled"
      ]
    },
    "shippingAddress": {
      "type": "json"
    },
    "totalAmount": {
      "type": "decimal"
    },
    "paymentStatus": {
      "type": "enumeration",
      "enum": [
        "pending",
        "completed",
        "failed"
      ]
    }
  }
}
